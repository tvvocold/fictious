<header class="image-container-home">
  <%= image_tag "http://s3.amazonaws.com/Fictious-dev/posts/images/000/000/002/original/13681949513_85b2cc7ff5_o.jpg?1403793056" %>
  <div class="view-header">
    <h1>Fictious</h1>
    <h3>A Medium clone for fiction</h3>
    <nav class="home-nav">
      <ul class="clearfix">
        <li><a href="#/">Top 100</a></li>
        <li><a href="#/subscriptions">Reading List</a></li>
      </ul>
    </nav>
  </div>
  <%= link_to "New Post", new_user_post_url(current_user.id), class: "button new-post-button white-button" %>

</header>

<div class="view-content posts-index home-page-content">

  <%= link_to "New Post", new_user_post_url(current_user.id), class: "button new-post-button white-button" %>

  <ul>
    <% @posts.each do |post| %>
      <li class="post-list">
        <a href="<%= post_url(post.id) %>">
          <h3><%= post.title %><h3>
          <h4><%= post.subtitle %></h4>

          <h5><%= post.author.username %></h5>
        </a>
      </li>
    <% end %>
  </ul>
</div>
